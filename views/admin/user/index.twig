{% extends "partials/layout-admin.twig" %}

{% block TitlePage %}Tous les utilisateurs{% endblock %}
{% block BtnPage %}
    <a href="{{ path_for('admin_user_new') }}" class="btn btn-sm btn-primary float-right">Ajouter</a>
{% endblock %}

{% block content %}

    <div class="card">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for us in users %}
                <tr>
                    <td> <a href="{{ path_for('admin_user_show', {'id': us.id }) }}">{{ us.username }}</a></td>
                    <td>{{ us.email }}</td>
                    <td class="text-right">
                        <div class="btn-group btn-group-sm">
                            <a href="{{ path_for('admin_user_show', {'id': us.id }) }}" class="btn btn-secondary"><i class="fa fa-eye"></i></a>
                            <a href="{{ path_for('admin_user_edit', {'id': us.id }) }}" class="btn btn-secondary"><i class="fa fa-pencil"></i></a>
                            <a data-confirm="Êtes-vous sûr?" data-method="delete" href="{{ path_for('admin_user_delete', {'id': us.id }) }}" class="btn btn-danger"><i class="fa fa-trash-o"></i></a>
                        </div>
                    </td>
                </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock %}
