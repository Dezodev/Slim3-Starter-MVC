{% extends "partials/layout-admin.twig" %}

{% block content %}
    <h1 class="page-header">Tous les utilisateurs</h1>

    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for us in users %}
                <tr>
                    <td>{{ us.id }}</td>
                    <td>{{ us.username }}</td>
                    <td>{{ us.email }}</td>
                    <td class="text-right">
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-secondary"><i class="fa fa-eye"></i></button>
                            <button class="btn btn-secondary"><i class="fa fa-pencil"></i></button>
                            <button class="btn btn-danger"><i class="fa fa-trash-o"></i></button>
                        </div>
                    </td>
                </tr>
            {% endfor %}

        </tbody>
    </table>
{% endblock %}