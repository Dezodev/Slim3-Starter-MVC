{% extends "partials/layout-admin.twig" %}

{% block content %}
    <h1 class="page-header">
        Tous les utilisateurs
        <a href="{{ path_for('admin_user_new') }}" class="btn btn-primary float-right">Ajouter</a>
    </h1>

    <div class="card">
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for us in users %}
                    <tr>
                        <td>{{ us.id }}</td>
                        <td>{{ us.username }}</td>
                        <td>{{ us.email }}</td>
                        <td class="text-right">
                            <div class="btn-group btn-group-sm">
                                <a href="{{ path_for('admin_user_show', {'id': us.id }) }}" class="btn btn-secondary"><i class="fa fa-eye"></i></a>
                                <a href="{{ path_for('admin_user_edit', {'id': us.id }) }}" class="btn btn-secondary"><i class="fa fa-pencil"></i></a>
                                <a data-confirm="Êtes-vous sûr?" data-method="delete" href="{{ path_for('admin_user_delete', {'id': us.id }) }}" class="btn btn-danger"><i class="fa fa-trash-o"></i></a>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}

                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
